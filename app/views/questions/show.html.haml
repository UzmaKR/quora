%h3 [#{@question.score}] #{@question.question}

%div
  -@answers.each do |a|
    %p= a.answer
    = a.votes.count
    =link_to "UpVote", votes_path(resource_id: a.id, resource: a.class.to_s, value: 1), method: "post"
    =link_to "DownVote", votes_path(resource: a.id, resource: a.class.to_s), method: "post"

%br
=link_to "Post an answer", new_question_answer_path(@question), :class => "btn btn-large btn-danger"

