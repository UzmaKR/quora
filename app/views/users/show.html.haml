.profile
  .main
    %h1= @user.username
  .left_section
    %img{:src => "http://www.gravatar.com/avatar/<%= Digest::MD5.hexdigest(user.email) %>" }
  .right_section
    .questions
      =link_to "Post a question", new_question_path, :class => "btn btn-large btn-success"
      %h3 Your Questions
    .answers
      %h3 Your Answers
